#------------------------------------------#
#               IGNITER.JS                 #
#------------------------------------------#
# Welcome to Igniter.js - The feature-first framework
# for building modern web applications.

#------------------------------------------#
#           DATABASE CONNECTION             #
#------------------------------------------#
DATABASE_URL="postgresql://docker:docker@localhost:5432/docker?schema=public"

#------------------------------------------#
#           APPLICATION SETUP               #
#------------------------------------------#
# Name of your application
IGNITER_APP_NAME=your_app_name_here

# URL where your app will be running
NEXT_PUBLIC_IGNITER_API_URL='http://localhost:3000/'

# Path where your API will be running
NEXT_PUBLIC_IGNITER_API_BASE_PATH=/api/v1

# Secret key for JWT (Replace this with a random string)
IGNITER_APP_SECRET=your_random_secret_key

# Application environment (development, production, test)
NODE_ENV="development"

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Job queue prefix
IGNITER_JOBS_QUEUE_PREFIX=igniter

# MCP server base path
IGNITER_MCP_SERVER_BASE_PATH=/api/mcp

# MCP session timeout in ms
IGNITER_MCP_SERVER_TIMEOUT=3600000

# Logging level (debug, info, warn, error)
IGNITER_LOG_LEVEL=info

# Enable telemetry tracing
IGNITER_TELEMETRY_ENABLE_TRACING=true

# Enable telemetry metrics
IGNITER_TELEMETRY_ENABLE_METRICS=true

# Enable telemetry metrics
IGNITER_TELEMETRY_ENABLE_EVENTS=true

# Enable telemetry metrics
IGNITER_TELEMETRY_ENABLE_CLI_INTEGRATION=true

# PostgreSQL connection string
DATABASE_URL=postgresql://docker:docker@localhost:5432/docker

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database name
DB_NAME=docker

# Database user
DB_USER=docker

# Database password
DB_PASSWORD=docker
