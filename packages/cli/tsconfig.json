{
  "extends": "@igniter-js/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": "",
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**"
  ]
}
