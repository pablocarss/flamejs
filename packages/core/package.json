{
  "name": "@igniter-js/core",
  "version": "0.2.88",
  "description": "A modern, type-safe, and flexible HTTP framework for building scalable APIs with TypeScript",
  "author": "Felipe Barcelos <felipebarcelospro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipebarcelospro/igniter-js.git"
  },
  "bugs": {
    "url": "https://github.com/felipebarcelospro/igniter-js/issues"
  },
  "homepage": "https://felipebarcelospro.github.io/igniter-js",
  "keywords": [
    "typescript",
    "api",
    "framework",
    "http",
    "router",
    "nextjs",
    "express",
    "fastify",
    "type-safe",
    "middleware",
    "server"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "browser": {
        "types": "./dist/client/index.browser.d.ts",
        "import": "./dist/client/index.browser.mjs",
        "require": "./dist/client/index.browser.js"
      },
      "node": {
        "types": "./dist/client/index.server.d.ts",
        "import": "./dist/client/index.server.mjs",
        "require": "./dist/client/index.server.js"
      },
      "worker": {
        "types": "./dist/client/index.browser.d.ts",
        "import": "./dist/client/index.browser.mjs",
        "require": "./dist/client/index.browser.js"
      },
      "default": {
        "types": "./dist/client/index.d.ts",
        "import": "./dist/client/index.mjs",
        "require": "./dist/client/index.js"
      }
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.mjs",
      "require": "./dist/plugins/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup && node scripts/add-use-client.js",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "ioredis": "",
    "next": ">=13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": ">=5.0.0",
    "webpack": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "webpack": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/lodash": "^4.17.15",
    "@types/next": "^9.0.0",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/webpack": "^5.28.5",
    "eslint": "^8.57.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "zod": "3.25.67"
  },
  "dependencies": {
    "@scalar/core": "^0.3.11",
    "chalk": "4.1.2",
    "glob": "^11.0.0",
    "lodash": "^4.17.21",
    "rou3": "^0.5.1",
    "uncrypto": "^0.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
